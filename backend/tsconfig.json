    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
