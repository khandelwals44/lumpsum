# =============================================================================
# CLIENT-SAFE VARIABLES (NEXT_PUBLIC_*)
# =============================================================================
# These variables are exposed to the browser

# reCAPTCHA (optional for local development)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=

# App configuration (optional)
NEXT_PUBLIC_APP_NAME=Lumpsum.in
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=development

# Analytics (optional)
NEXT_PUBLIC_GA_ID=

# Debug (optional)
NEXT_PUBLIC_DEBUG_SAFE=

# =============================================================================
# SERVER-ONLY VARIABLES
# =============================================================================
# These variables are NOT exposed to the browser

# Database (required)
DATABASE_URL=file:./dev.db

# NextAuth configuration (required)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-min-32-chars

# OAuth providers (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# reCAPTCHA server key (optional)
RECAPTCHA_SECRET_KEY=

# JWT (optional - falls back to NEXTAUTH_SECRET)
JWT_SECRET=

# API configuration (optional)
API_BASE_URL=
NEXT_PUBLIC_API_BASE_URL=

# Debug (optional)
DEBUG_SAFE=

# Server port (optional)
PORT=3000

# Node environment (optional)
NODE_ENV=development
