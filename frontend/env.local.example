# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES (Local Development)
# =============================================================================
# 
# Copy this file to .env.local in the frontend directory
# This file contains environment variables for local development only
# 
# IMPORTANT: This file should NEVER be committed to version control
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION (Server-only)
# =============================================================================
# Local PostgreSQL database URL
# Format: postgresql://username:password@localhost:5432/lumpsum_dev
DATABASE_URL=postgresql://postgres:password@localhost:5432/lumpsum_dev

# =============================================================================
# NEXT-AUTH CONFIGURATION (Server-only)
# =============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-32-character-secret-key-here-for-local-dev

# Local development URL
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# GOOGLE OAUTH CONFIGURATION (Server-only)
# =============================================================================
# Get from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# RECAPTCHA CONFIGURATION
# =============================================================================
# Get from Google reCAPTCHA Admin Console
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=6Lxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
RECAPTCHA_SECRET_KEY=6Lxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# JWT CONFIGURATION (Server-only, optional)
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key-here

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Local backend API URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001
API_BASE_URL=http://localhost:3001

# =============================================================================
# ANALYTICS CONFIGURATION (Client-safe)
# =============================================================================
# Leave empty for local development
NEXT_PUBLIC_GA_ID=

# =============================================================================
# APPLICATION CONFIGURATION (Client-safe)
# =============================================================================
NEXT_PUBLIC_APP_NAME=Lumpsum.in
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=development

# =============================================================================
# DEBUG CONFIGURATION (Client-safe)
# =============================================================================
# Enable secure logging for local development
NEXT_PUBLIC_DEBUG_SAFE=1
DEBUG_SAFE=1

# =============================================================================
# SERVER CONFIGURATION (Server-only)
# =============================================================================
PORT=3001

# =============================================================================
# NODE ENVIRONMENT (Server-only)
# =============================================================================
NODE_ENV=development

